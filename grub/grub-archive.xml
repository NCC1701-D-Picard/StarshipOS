<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>grub</id>
    <formats>
        <format>tgz</format>
    </formats>
    <fileSets>
        <!-- Include the "cd" directory -->
        <fileSet>
            <directory>build/cd</directory>
            <outputDirectory>cd</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <!-- Include the "hd0" directory -->
        <fileSet>
            <directory>build/hd0</directory>
            <outputDirectory>hd0</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
